name:                hash-id-tests
version:             0.1.0.0
license:             MIT
license-file:        ../LICENSE
author:              Samuel Schuhmacher
maintainer:          forgetaboutit@muhbaasu.de
category:            Other
build-type:          Simple
cabal-version:       >=1.10

executable hash-id-tests
  main-is:             Tests.hs
  other-modules:       Tests.Properties
                       Tests.Simple
  hs-source-dirs:      .

  -- depends on the whole project to access the library
  build-depends:       base >=4.7 && <4.8
                     , hash-id-tests
                     , HUnit
                     , QuickCheck
                     , test-framework
                     , test-framework-hunit
                     , test-framework-quickcheck2
                   
  hs-source-dirs:      Tests
  default-language:    Haskell2010
  extensions:          OverloadedStrings

-- include top-level library
library
  hs-source-dirs:      ../src
  exposed-modules:     Data.HashId.Internal
  build-depends:       base
                     , text
